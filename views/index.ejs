    <!-- Carousel Script -->
    <script>
      const carousel = document.getElementById('services-carousel');
      const prevBtn = document.getElementById('prev-slide');
      const nextBtn = document.getElementById('next-slide');
      let currentIndex = 0;
      const gutter = 16; // Gap in pixels between slides

      // Set each slide's width to 45% of the container width and add a right margin
      function updateSlideWidths() {
        const containerWidth = carousel.parentElement.offsetWidth;
        const slideWidth = containerWidth * 0.45;
        Array.from(carousel.children).forEach(child => {
          child.style.width = slideWidth + 'px';
          child.style.marginRight = gutter + 'px';
        });
        return slideWidth;
      }

      // Update the transform to slide the carousel by one "slide width + gutter" per index change
      function updateCarousel() {
        const slideWidth = updateSlideWidths();
        carousel.style.transform = `translateX(-${currentIndex * (slideWidth + gutter)}px)`;
      }

      nextBtn.addEventListener('click', () => {
        const totalSlides = carousel.children.length;
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      });

      prevBtn.addEventListener('click', () => {
        const totalSlides = carousel.children.length;
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });

      window.addEventListener('resize', updateCarousel);
      updateCarousel();
    </script>

